<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About"
   android:layout_gravity="center"
    android:background="#03a9f4"
    android:orientation="horizontal"
    >
    <LinearLayout

        android:id="@+id/Headprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/viewimage"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic2_launcher_round" />



        <TextView

            android:layout_marginTop="4dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailname"
            android:text="firliafrisa@gmail.com"
            android:textColor="#01579b"
            android:textSize="12dp"
            android:fontFamily="sans-serif-black">




        </TextView>
        <Button

            android:id="@+id/logout"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Logout"
            android:textSize="10dp"
            android:fontFamily="sans-serif-black"
            android:textColor="#ffffff"
            android:background="@drawable/button">

        </Button>
    </LinearLayout>




    <LinearLayout
        android:gravity="center"
        android:id="@+id/linear2"
        android:layout_below="@id/Headprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:padding="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:id="@+id/location"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:background="@drawable/viewimage"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"

            android:layout_marginRight="0dp">

            <ImageButton
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="@drawable/viewimage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/maps1"

                android:src="@drawable/maps"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAPS"
                android:textSize="10dp"
                android:fontFamily="sans-serif-black"
                android:textColor="#01579b"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:id="@+id/Contact"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:background="@drawable/viewimage"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageButton
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="@drawable/viewimage"
                android:layout_width="40dp"
                android:layout_height="40dp"
               android:id="@+id/contact1"
                android:src="@drawable/wa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTACT"
                android:textSize="10dp"
                android:fontFamily="sans-serif-black"
                android:textColor="#01579b"
                android:layout_marginBottom="0dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="5dp"
            android:id="@+id/info"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:background="@drawable/viewimage"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/book1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="@drawable/viewimage"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@drawable/book"
              />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOOKING"
                android:textSize="10dp"
                android:fontFamily="sans-serif-black"
                android:textColor="#01579b"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:id="@+id/Whatsapp"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:background="@drawable/viewimage"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/info1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="@drawable/viewimage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/yt"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOUTUBE"
                android:textSize="10dp"
                android:fontFamily="sans-serif-black"
                android:textColor="#01579b"
                android:layout_marginBottom="0dp"
                />
        </LinearLayout>





    </LinearLayout>



</RelativeLayout>